<%- include('partials/header', { title, page }) %>

<div class="content-header">
  <div style="display: flex; align-items: center; gap: 1rem;">
    <a href="/profiles" class="btn btn-secondary btn-sm"><i class="fas fa-arrow-left"></i></a>
    <h2><i class="fas fa-user"></i> <%= profile.full_name || 'İsimsiz' %></h2>
    <% if (profile.status === 'customer') { %>
      <span class="badge badge-success"><i class="fas fa-check"></i> Müşteri</span>
    <% } else if (profile.status === 'admin') { %>
      <span class="badge badge-danger"><i class="fas fa-shield-alt"></i> Admin</span>
    <% } else if (profile.status === 'collecting') { %>
      <span class="badge badge-warning"><i class="fas fa-hourglass-half"></i> Bilgi Toplama</span>
    <% } else if (profile.status === 'waiting') { %>
      <span class="badge badge-info"><i class="fas fa-clock"></i> Bekliyor</span>
    <% } else { %>
      <span class="badge badge-secondary"><%= profile.status %></span>
    <% } %>
  </div>
  <div class="header-actions">
    <button class="btn btn-danger btn-sm" onclick="deleteProfile(<%= profile.id %>)">
      <i class="fas fa-trash"></i> Sil
    </button>
  </div>
</div>

<div class="row">
  <div class="col-8">
    <!-- Profil Bilgileri -->
    <div class="card">
      <div class="card-header">
        <h3><i class="fas fa-id-card"></i> Profil Bilgileri</h3>
      </div>
      <div class="card-body">
        <form id="profileForm">
          <div class="row">
            <div class="col-6">
              <div class="form-group">
                <label class="form-label">Ad Soyad</label>
                <input type="text" name="full_name" class="form-control" value="<%= profile.full_name || '' %>">
              </div>
            </div>
            <div class="col-6">
              <div class="form-group">
                <label class="form-label">Telefon / WhatsApp</label>
                <input type="text" name="chat_id" class="form-control" value="<%= profile.chat_id ? profile.chat_id.split('@')[0] : '' %>" readonly>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-6">
              <div class="form-group">
                <label class="form-label">Şehir</label>
                <input type="text" name="city" class="form-control" value="<%= profile.city || '' %>">
              </div>
            </div>
            <div class="col-6">
              <div class="form-group">
                <label class="form-label">Anne Adı</label>
                <input type="text" name="mother_name" class="form-control" value="<%= profile.mother_name || '' %>">
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-6">
              <div class="form-group">
                <label class="form-label">Doğum Tarihi</label>
                <input type="text" name="birth_date" class="form-control" value="<%= profile.birth_date || '' %>">
              </div>
            </div>
            <div class="col-6">
              <div class="form-group">
                <label class="form-label">Durum</label>
                <select name="status" class="form-control">
                  <option value="new" <%= profile.status === 'new' ? 'selected' : '' %>>Yeni</option>
                  <option value="collecting" <%= profile.status === 'collecting' ? 'selected' : '' %>>Bilgi Toplama</option>
                  <option value="waiting" <%= profile.status === 'waiting' ? 'selected' : '' %>>Bekliyor</option>
                  <option value="appointment_scheduled" <%= profile.status === 'appointment_scheduled' ? 'selected' : '' %>>Randevu Alındı</option>
                  <option value="called" <%= profile.status === 'called' ? 'selected' : '' %>>Arandı</option>
                  <option value="customer" <%= profile.status === 'customer' ? 'selected' : '' %>>Müşteri</option>
                  <option value="admin" <%= profile.status === 'admin' ? 'selected' : '' %>>Admin</option>
                </select>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label class="form-label">Konu / Talep</label>
            <textarea name="subject" class="form-control" rows="3"><%= profile.subject || '' %></textarea>
          </div>

          <div class="form-group">
            <label class="form-label">Notlar</label>
            <textarea name="notes" class="form-control" rows="3"><%= profile.notes || '' %></textarea>
          </div>

          <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Kaydet
          </button>
        </form>
      </div>
    </div>

    <!-- Son Mesajlar -->
    <div class="card">
      <div class="card-header">
        <h3><i class="fas fa-comments"></i> Son Mesajlar</h3>
      </div>
      <div class="card-body">
        <% if (messages && messages.length > 0) { %>
          <div class="messages-list">
            <% messages.forEach(function(msg) { %>
              <div class="message-item <%= msg.direction === 'incoming' ? 'incoming' : 'outgoing' %>">
                <div class="message-content"><%= msg.body %></div>
                <div class="message-time"><%= new Date(msg.created_at).toLocaleString('tr-TR') %></div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <p class="text-muted">Henüz mesaj yok.</p>
        <% } %>
      </div>
    </div>
  </div>

  <div class="col-4">
    <!-- Hızlı İşlemler -->
    <div class="card">
      <div class="card-header">
        <h3><i class="fas fa-bolt"></i> Hızlı İşlemler</h3>
      </div>
      <div class="card-body">
        <button class="btn btn-success w-100 mb-2" onclick="updateStatus('customer')">
          <i class="fas fa-check"></i> Müşteri Yap
        </button>
        <button class="btn btn-info w-100 mb-2" onclick="updateStatus('called')">
          <i class="fas fa-phone"></i> Arandı İşaretle
        </button>
        <button class="btn btn-warning w-100 mb-2" onclick="updateStatus('appointment_scheduled')">
          <i class="fas fa-calendar"></i> Randevu Alındı
        </button>
        <a href="/chats?profile=<%= profile.id %>" class="btn btn-secondary w-100">
          <i class="fas fa-comments"></i> Sohbete Git
        </a>
      </div>
    </div>

    <!-- Bilgiler -->
    <div class="card">
      <div class="card-header">
        <h3><i class="fas fa-info-circle"></i> Bilgiler</h3>
      </div>
      <div class="card-body">
        <div class="info-item">
          <span class="info-label">Oluşturulma:</span>
          <span><%= new Date(profile.created_at).toLocaleString('tr-TR') %></span>
        </div>
        <div class="info-item">
          <span class="info-label">Güncelleme:</span>
          <span><%= profile.updated_at ? new Date(profile.updated_at).toLocaleString('tr-TR') : '-' %></span>
        </div>
        <div class="info-item">
          <span class="info-label">Bot:</span>
          <span><%= profile.client_id || '-' %></span>
        </div>
        <div class="info-item">
          <span class="info-label">Mesaj Sayısı:</span>
          <span><%= messages ? messages.length : 0 %></span>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.row { display: flex; gap: 1rem; margin-bottom: 1rem; }
.col-4 { flex: 0 0 33.333%; }
.col-6 { flex: 1; }
.col-8 { flex: 0 0 66.666%; }
.w-100 { width: 100%; }
.mb-2 { margin-bottom: 0.5rem; }

.messages-list {
  max-height: 400px;
  overflow-y: auto;
}
.message-item {
  padding: 0.75rem;
  margin-bottom: 0.5rem;
  border-radius: 0.5rem;
}
.message-item.incoming {
  background: #1e293b;
  margin-right: 20%;
}
.message-item.outgoing {
  background: #1e3a5f;
  margin-left: 20%;
}
.message-content {
  white-space: pre-wrap;
}
.message-time {
  font-size: 0.75rem;
  color: #94a3b8;
  margin-top: 0.25rem;
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 0.5rem 0;
  border-bottom: 1px solid #334155;
}
.info-item:last-child {
  border-bottom: none;
}
.info-label {
  color: #94a3b8;
}
</style>

<script>
var profileId = <%= profile.id %>;

document.getElementById('profileForm').addEventListener('submit', function(e) {
  e.preventDefault();
  var formData = new FormData(e.target);
  var data = {};
  formData.forEach(function(value, key) { data[key] = value; });

  fetch('/api/profiles/' + profileId, {
    method: 'PUT',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify(data)
  })
  .then(function(res) { return res.json(); })
  .then(function(result) {
    if (result.success) {
      showToast('Başarılı', 'Profil güncellendi', 'success');
    } else {
      showToast('Hata', result.error || 'Bir hata oluştu', 'error');
    }
  })
  .catch(function(err) {
    showToast('Hata', 'Sunucu hatası', 'error');
  });
});

function updateStatus(status) {
  fetch('/api/profiles/' + profileId, {
    method: 'PUT',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ status: status })
  })
  .then(function(res) { return res.json(); })
  .then(function(result) {
    if (result.success) {
      showToast('Başarılı', 'Durum güncellendi', 'success');
      setTimeout(function() { location.reload(); }, 500);
    } else {
      showToast('Hata', result.error || 'Bir hata oluştu', 'error');
    }
  });
}

function deleteProfile(id) {
  if (!confirm('Bu profili silmek istediğinize emin misiniz?')) return;
  fetch('/api/profiles/' + id, { method: 'DELETE' })
  .then(function(res) { return res.json(); })
  .then(function(result) {
    if (result.success) {
      showToast('Başarılı', 'Profil silindi', 'success');
      setTimeout(function() { window.location.href = '/profiles'; }, 500);
    } else {
      showToast('Hata', result.error || 'Bir hata oluştu', 'error');
    }
  });
}
</script>

<%- include('partials/footer') %>
